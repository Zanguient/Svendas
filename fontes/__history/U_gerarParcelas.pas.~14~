type
  TF_gerarParcelas = class(TForm)
    Panel1: TPanel;
    DBG_listarLancamentos: TDBGrid;
    txt_valorVista: TCurrencyEdit;
    txt_valorPrazo: TCurrencyEdit;
    Label1: TLabel;
    Label2: TLabel;
    txt_buscarCliente: TEdit;
    Label3: TLabel;
    txt_buscarCodVenda: TEdit;
